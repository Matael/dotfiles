# WIFI
interface="wlp3s0"
quality=$(iwconfig $interface | grep Quality | cut -d'=' -f2 | cut -d' ' -f1 | cut -d'/' -f1)
if [[ $quality -gt 0 ]]; then
  (( percent = (quality * 100) / 70 ))
  printf " #[fg=colour3]w%s#[default]" "$percent"
fi

